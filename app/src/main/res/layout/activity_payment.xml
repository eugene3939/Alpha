<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Payment">

    <!--付款介面-->
    <LinearLayout
        android:id="@+id/layout_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--選擇支付類別-->
        <Spinner
            android:id="@+id/sp_paymentWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--輸入金額-->
        <EditText
            android:id="@+id/edt_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="@string/txt_please_enter_payment"
            android:textSize="25sp"
            android:autofillHints="0"
            android:inputType="number" />

        <!--清除金額-->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="25sp"
            android:text="@string/txt_clear"/>
    </LinearLayout>

    <!--重新選擇支付方式-->
    <!--付款金額滿足前不可點擊-->
    <Button
        android:id="@+id/btn_confirmPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_calculator"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="@string/txt_confirmPayment"
        android:visibility="visible"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_payment"
        android:layout_below="@id/btn_confirmPayment"
        android:orientation="vertical">

        <!--購買明細-->
        <ListView
            android:id="@+id/ls_buyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--折扣明細-->
        <ListView
            android:id="@+id/ls_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!--顯示支付額-->
        <TextView
            android:id="@+id/txt_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_payment"
            android:textSize="30sp"/>

        <!--顯示總價-->
        <TextView
            android:id="@+id/txt_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_totalPrice"
            android:textSize="30sp"/>

        <!--顯示找零-->
        <TextView
            android:id="@+id/txt_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_change"
            android:textSize="30sp"/>
    </LinearLayout>

    <!--交易取消-->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:text="@string/txt_cancel"/>

</RelativeLayout>