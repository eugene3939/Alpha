<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Payment">

    <!--付款介面-->
    <LinearLayout
        android:id="@+id/layout_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--輸入金額-->
        <EditText
            android:id="@+id/edt_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="@string/txt_please_enter_payment"
            android:textSize="25sp"
            android:autofillHints="0"
            android:inputType="number" />

        <!--清除金額-->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/txt_clear"/>
    </LinearLayout>

    <!--支付別按鈕-->
    <LinearLayout
        android:id="@+id/layout_paymentTYpe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_calculator"
        android:orientation="horizontal">

        <!--現金支付-->
        <Button
            android:id="@+id/btn_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cash"/>

        <!--信用卡支付-->
        <Button
            android:id="@+id/btn_cashCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cashCard"/>

        <!--電子支付-->
        <Button
            android:id="@+id/btn_electricPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_electricPayment"/>
    </LinearLayout>

    <!--重新選擇支付方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_payment"
        android:layout_below="@id/layout_paymentTYpe"
        android:orientation="vertical">

        <!--購買明細-->
        <ListView
            android:id="@+id/ls_buyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--折扣明細-->
        <ListView
            android:id="@+id/ls_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!--顯示支付額-->
        <TextView
            android:id="@+id/txt_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_payment"
            android:textSize="30sp"/>

        <!--顯示總價-->
        <TextView
            android:id="@+id/txt_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_totalPrice"
            android:textSize="30sp"/>

        <!--顯示找零-->
        <TextView
            android:id="@+id/txt_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_change"
            android:textSize="30sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/ls_paymentWay"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="end"
        android:layout_above="@+id/btn_back"
        android:layout_toEndOf="@id/layout_payment" />

    <!--交易送出-->
    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/txt_sent"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btn_back"
        android:enabled="false"/>
    <!--交易取消-->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:text="@string/txt_cancel"/>

</RelativeLayout>